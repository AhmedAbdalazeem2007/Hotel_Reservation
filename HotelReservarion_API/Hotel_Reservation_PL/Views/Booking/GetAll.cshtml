@model IReadOnlyList<BookViewModel>
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/BookinLayout.cshtml";
}

<h1>All Booking</h1>
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>ID</td>
                <td>CustomerName</td>
                <td> NationalId</td>
                <td>CountRooms</td>
                <td>CheckIn</td>
                <td>CheckOut</td>
                <td>PhoneNumber</td>
                <td>Email</td>
                <td>TotalCost</td>
                <td>Hotel</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.CustomerName</td>
                    <td>@book.NationalId</td>
                    <td>@book.CountRooms</td>
                    <td>@book.CheckIn</td>
                    <td>@book.CheckOut</td>
                    <td>@book.PhoneNumber</td>
                    <td>@book.Email</td>
                    <td>@book.TotalCost</td>
                    <td>@book.Hotel</td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-3 alert alert-warning">
        <h3>
            There Is no Booking
        </h3>
    </div>
}